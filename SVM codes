import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
from sklearn.model_selection import train_test_split, GridSearchCV, cross_val_score
from sklearn.preprocessing import StandardScaler
from sklearn.svm import SVC
from sklearn.metrics import classification_report
from sklearn.decomposition import PCA

# ✅ Step 1: Load dataset
file_path = r"C:\Users\anany\Downloads\archive (13)\diabetes.csv"
df = pd.read_csv(file_path)

print("🔍 Columns:", df.columns.tolist())

# ✅ Step 2: Features and target
X = df.drop('Outcome', axis=1)
y = df['Outcome']

# ✅ Step 3: Standardization
scaler = StandardScaler()
X_scaled = scaler.fit_transform(X)

# ✅ Step 4: Train-test split
X_train, X_test, y_train, y_test = train_test_split(X_scaled, y, test_size=0.2, random_state=42)

# ✅ Step 5: Train SVMs
svm_linear = SVC(kernel='linear', C=1)
svm_linear.fit(X_train, y_train)
y_pred_linear = svm_linear.predict(X_test)

svm_rbf = SVC(kernel='rbf', C=1, gamma='scale')
svm_rbf.fit(X_train, y_train)
y_pred_rbf = svm_rbf.predict(X_test)

# ✅ Step 6: Evaluation
print("📊 Linear SVM Report:\n", classification_report(y_test, y_pred_linear))
print("📊 RBF SVM Report:\n", classification_report(y_test, y_pred_rbf))

# ✅ Step 7: Cross-validation
scores = cross_val_score(svm_rbf, X_scaled, y, cv=5)
print("✅ RBF Kernel CV Accuracy: %.2f%%" % (scores.mean() * 100))

# ✅ Step 8: GridSearchCV tuning
param_grid = {
    'C': [0.1, 1, 10],
    'gamma': [0.001, 0.01, 0.1, 1]
}
grid = GridSearchCV(SVC(kernel='rbf'), param_grid, cv=5, verbose=1)
grid.fit(X_train, y_train)
print("🎯 Best Params:", grid.best_params_)

# ✅ Step 9: PCA for 2D plot
pca = PCA(n_components=2)
X_pca = pca.fit_transform(X_scaled)
X_train_2D, X_test_2D, y_train_2D, y_test_2D = train_test_split(X_pca, y, test_size=0.2, random_state=42)

model_2D = SVC(kernel='rbf', C=1, gamma=0.01)
model_2D.fit(X_train_2D, y_train_2D)

# ✅ Step 10: Decision boundary plot
def plot_decision_boundary(X, y, model):
    h = 0.02
    x_min, x_max = X[:, 0].min() - 1, X[:, 0].max() + 1
    y_min, y_max = X[:, 1].min() - 1, X[:, 1].max() + 1
    xx, yy = np.meshgrid(np.arange(x_min, x_max, h),
                         np.arange(y_min, y_max, h))
    Z = model.predict(np.c_[xx.ravel(), yy.ravel()])
    Z = Z.reshape(xx.shape)

    plt.contourf(xx, yy, Z, alpha=0.6, cmap=plt.cm.coolwarm)
    plt.scatter(X[:, 0], X[:, 1], c=y, edgecolors='k', cmap=plt.cm.coolwarm)
    plt.xlabel("PCA Component 1")
    plt.ylabel("PCA Component 2")
    plt.title("SVM Decision Boundary (Diabetes Data, PCA)")
    plt.show()

plot_decision_boundary(X_test_2D, y_test_2D, model_2D)
